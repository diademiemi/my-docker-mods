#!/usr/bin/with-contenv bash

if [ -z ${USERNAME} ]
then
    export USERNAME=abc
fi

if [ ${HOME} ] && [ ${HOME} != "/config" ]
then
    echo "Changing user home"
    usermod -d ${HOME} ${USERNAME}
    if [ -d /config/.config/code-server ]
    then
        if [ ! -d ${HOME}/.config/code-server ]
        then
            echo "Moving code-server config"
            mkdir -p ${HOME}/.config/code-server
            mv /config/.config/code-server ${HOME}/.config
        fi
    fi
    if [ -d /config/.local/share/code-server ]
    then
        if [ ! -d ${HOME}/.local/share/code-server ]
        then
            echo "Moving code-server shared files"
            mkdir -p ${HOME}/.local/share/code-server
            mv /config/.local/share/code-server ${HOME}/.local/share
        fi
    fi
fi
